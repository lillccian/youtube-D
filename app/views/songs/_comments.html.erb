<table class="table table-hover table-bordered">
	<% @comments.each do |c| %>
		<tr id="comment-<%= c.id %>">
			<td><%= c.title %></td>
			<td><%= c.user.email %></td>
			<td><%= link_to'edit',edit_song_comment_path(@song,c),:remote=>true,:class=>'btn btn-default' %></td>
		</tr>
		<tr id="comment-<%= c.id %>">
			<td colspan="2"><%= c.description %></td>
			<td><%= link_to'delete',song_comment_path(@song,c),:method=>:delete,:remote=>true,:class=>'btn btn-default' %></td>
		</tr>
	<% end %>
</table>

 