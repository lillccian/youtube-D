<div class="panel panel-default">
  <div class="panel-heading">
  	<h4><%= @song.name %></h4>
		<div id="like">
			<%= render 'like'%>	
		</div>
		<div id="keep">
			<%= render 'keep'%>	
		</div>
	</div>
	<table class="table table-hover table-bordered">
	<tr><th>
		Host <%= @song.user.email %>
		<div class="pull-right">
			<%= link_to'edit',edit_song_path(@song), :class=>'btn btn-default' %>		
		</div>
	</th></tr>
	<tr><td><%= @song.description %></td></tr>
	<tr><td>
		<% @song.tags.each do|t| %>
		<%= t.tag %>
		<% end %>
	</td></tr>
	</table>
</div>



<%= render 'youtube' %>

<p>ytlinks</p>

<table class="table table-hover table-bordered">
	<% @ytlinks.each do |y| %>
	<tr id="ytlink-<%= y.id %>">
		<td><%= y.name %></td>
		<td><%= y.link %></td>
		<td><%= y.user.email %></td>
		<td><%= link_to'edit',edit_song_ytlink_path(@song,y),:class=>'btn btn-default' %></td>
		<td><%= link_to'delete',song_ytlink_path(@song,y),:method =>:delete,:remote=>true,:class=>'btn btn-default' %></td>
	</tr>
	<% end %>

</table>

<%= render 'ytlinks/newytlink' %>

<p>comments</p>

<table class="table table-hover table-bordered">
	<% @comments.each do |c| %>
		<tr id="comment-<%= c.id %>">
			<tr>
				<td><%= c.title %></td>
				<td><%= c.user.email %></td>
				<td><%= link_to'edit',edit_song_comment_path(@song,c),:class=>'btn btn-default' %></td>
			</tr>
			<tr>
				<td colspan="2"><%= c.description %></td>
				<td><%= link_to'delete',song_comment_path(@song,c),:method=>:delete,:remote=>true,:class=>'btn btn-default' %></td>
			</tr>
		</tr>
	<% end %>
</table>

<%= render 'comments/newcomment' %>

<%= link_to 'back', songs_path, :class=>'btn btn-default' %> 