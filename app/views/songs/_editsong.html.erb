<%= form_for @song, :url => song_path(@song),:remote=>true do |s| %>
	<table class="table table-hover table-bordered">
		<tr class="warning">
			<td><%= s.text_field :name,:placeholder=>"Channel Name",:class=>"form-control" %></td>
			<td><%= s.text_field :description,:placeholder=>"Description",:class=>"form-control" %></td>
			<td width="1%"><%= link_to "",edit_song_path(@song,:order=>'cancel'),:remote=>true, :class=>"btn btn-default glyphicon glyphicon-remove" %></td>
		  <td width="1%"><button type='submit' class='btn btn-default glyphicon glyphicon-ok'></button></td>
		</tr>
	</table>
<% end %>

