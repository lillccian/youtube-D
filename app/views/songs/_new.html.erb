<%= form_for @song, :url => songs_path do |s| %>
	<div class="panel panel-default">
	  <div class="panel-heading">NEW CHANNEL</div>
		<table class="table table-bordered">
			<tr>
				<td colspan="3"><%= s.text_field :name,:placeholder=>"Channel Name",:class=>"form-control" %></td>
			</tr>
			<tr>	
				<td><%= s.text_area :description,:placeholder=>"Description",:class=>"form-control" %></td>
				<td width="10%"><%= link_to "Delete",songs_path, :class=>"btn btn-default" %></td>
			  <td width="10%"><button type='submit' class='btn btn-default'>Create</button></td>
			</tr>
		</table>
	</div>
<% end %>