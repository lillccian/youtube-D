<%= render 'new' %>
<%= form_for @tag, :url=> tags_path do |t| %>
	<%= t.text_field :tag,:placeholder=>"#tags",:class=>"form-control" %>
	<button type="submit" class="btn btn-default">add tags</button>
<% end %>

<% @songs.each do |s| %>
	<div class="col-lg-6">
		<div class="panel panel-default">
		  <div class="panel-heading"><%= s.name %></div>
			<table class="table table-bordered">
				<tr>
					<td><%= s.ytlinks.count %></td>
					<td><%= s.view_count %></td>
					<td><%= s.user.email %></td>
					<!-- show -->
					<td width="5%"><%= link_to'',song_path(s), :class=>'btn btn-default glyphicon glyphicon-search' %></td>
					<!-- delete -->
					<td width="5%"><%= link_to'',song_path(s),:method=>:delete, :class=>'btn btn-default glyphicon glyphicon-trash' %></td>
				</tr>
			</table>
		</div>
	</div>
<% end %>
