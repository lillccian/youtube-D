<%= link_to 'new Channel',new_song_path,:class=>'btn btn-default' %>
<%= form_for @song, :url => songs_path do |s| %>
	<%= render :partial =>'new' ,:locals =>{:s => s}%>
	<%= s.collection_check_boxes(:tag_ids, Tag.all, :id, :tag) %>
<% end %>
<%= form_for @tag, :url=> tags_path do |t| %>
<%= t.text_field :tag,:placeholder=>"#tags",:class=>"form-control" %>
<button type="submit" class="btn btn-default">add tags</button>
<% end %>
<table class="table table-hover table-bordered">
	<tr>
		<th>Channel Name</th>
		<th>Host</th>
		<th>Songs</th>
		<th>Show</th>
		<th>Delete</th>
	</tr>
	<% @songs.each do |s| %>
	<tr>
		<th><%= s.name %></th>
		<td><%= s.user.email %></td>
		<td><%= s.ytlinks.count %></td>
		<!-- show -->
		<td><%= link_to'',song_path(s), :class=>'btn btn-default glyphicon glyphicon-search' %></td>
		<!-- delete -->
		<td><%= link_to'',song_path(s),:method=>:delete, :class=>'btn btn-default glyphicon glyphicon-trash' %></td>
	</tr>
	<% end %>
</table>




