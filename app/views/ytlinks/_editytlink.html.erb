<%= form_for @ytlink, :url=> song_ytlink_path(@song),:remote => true do |y| %>
	<table class="table table-hover table-bordered">
		<tr class="warning">
			<td><%= y.text_field :name, :placeholder=>'Song Name', :class=>'form-control' %></td>
			<td><%= y.text_field :link, :placeholder=>'Youtube Link ID', :class=>'form-control' %></td>
			<td width="1%"><%= link_to '', new_song_ytlink_path(@song),:remote=>true, :class => 'btn btn-default glyphicon glyphicon-remove' %></td>
			<td width="1%"><button type="submit" class='btn btn-default glyphicon glyphicon-ok'></button></td>
			<td width="1%"><%= link_to '', new_song_ytlink_path(@song, :order=>"refresh"),:remote=>true, :class => 'btn btn-default glyphicon glyphicon-refresh' %></td>
		</tr>
	</table>
<% end %>
