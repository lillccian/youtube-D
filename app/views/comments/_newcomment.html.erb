<%= form_for @comment,:url => song_comments_path(@song),:remote=>true do |c| %>
	<table class="table table-hover table-bordered">
		<tr>
			<td colspan="3"><%= c.text_field :title, :placeholder=>'Title', :class=>"form-control" %></td>
		</tr>
		<tr>
			<td><%= c.text_area :description, :placeholder=>'Destription', :class=>"form-control" %></td>
			<td width="1%"><%= link_to '',new_song_comment_path(@song),:remote=>true, :class=>'btn btn-default glyphicon glyphicon-remove' %></td>
			<td width="1%"><button type="submit" class="btn btn-default glyphicon glyphicon-plus"></button></td>
		</tr>
	</table>
<% end %>
