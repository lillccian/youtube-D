<%= form_for @comment,:url =>song_comment_path(@song),:remote=>true do |c| %>
	<table class="table table-hover table-bordered">
		<tr class="warning">
			<td><%= c.text_field :title, :class=>"form-control" %></td>
			<td><%= link_to 'back',new_song_comment_path(@song),:remote=>true, :class=>'btn btn-default' %></td>
		</tr>
		<tr class="warning">
			<td><%= c.text_area :description, :class=>"form-control" %></td>
			<td><button type="submit" class="btn btn-default">save</button></td>
		</tr>
	</table>
<% end %>