<%= form_for @tag,:url => song_tags_path(@song),:remote=>true do |t| %>
	<table class="table table-hover table-bordered">
		<tr>
			<td><%= t.text_field :tag ,:placeholder=>"#Tags",:class =>'form-control'%></td>
			<td width="1%"><%= link_to'',new_song_tag_path(@song),:remote=>true,:class =>"btn btn-default glyphicon glyphicon-remove"%></td>
			<td width="1%"><button type="submit" class="btn btn-default glyphicon glyphicon-plus"></button></td>
		</tr>
	</table>
<% end %>