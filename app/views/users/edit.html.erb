<div class="col-lg-1"></div>
<div class="col-lg-10">
	<%= form_for @user,:url=>user_path(@user) do |u| %>
		<h2>Edit Profile </h2>
	  <table class="table table-bordered" >
	     <tr>
	      <th><%= u.label :name,'Name' %></th>
	      <td><%= u.text_field :name,:class=>"form-control" %></td>
	    </tr>
	    <tr>
	      <th><%= u.label :nickname,'Nickname' %></th>
	      <td><%= u.text_field :nickname,:class=>"form-control" %></td>
	    </tr>
	    <tr>
	      <th><%= u.label :profile,'profile' %></th>
	      <td><%= u.text_area :profile,:class=>"form-control" %></td>
	    </tr>
	  </table>
  <div class="actions pull-right">
    <button type="submit" class="btn btn-default">Update</button>
  </div>
  <% end %>
</div>
<%= link_to "back",songs_path,:class=>'btn btn-default btn-back' %>